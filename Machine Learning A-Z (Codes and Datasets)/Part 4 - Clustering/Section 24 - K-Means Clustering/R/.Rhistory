dataset = read.csv('Mall_Customers.csv')
x= dataset[4:5]
View(x)
set.seed(123)
wcss<-vector()
for (i in 1:10) wcss[i]<-sum(kmeans(x,i)$withins)
plot(1:10,wcss,type='b',main=paste('Clusters of clients'),xlab='no of clusters',ylab='WCSS')
set.seed(29)
kmeans=kmeans(x,5,iter.max=300,nstart=10)
library(cluster, lib.loc = "C:/Program Files/R/R-4.2.1/library")
clusplot(x,kmeans$cluster,lines=0,shade=TRUE,color=TRUE,labels=2,plotchar=FALSE,span=TRUE,main=paste('Client clusters'),xlab='Annual Income',ylab='Spending score')
